---
import { Image } from 'astro:assets';

interface Props {
    title: string;
    txt: string;
    // color?: string;
    // bgColor?: string;
    img?: ImageMetadata;
    altText?: string;
}

const {title, txt, color = 'black', bgColor = 'white', img, altText} = Astro.props;
---

<!--<div class="slide-wr" style={`color: ${color};background-color: ${bgColor}`}>-->
<div class="slide-wr">
    <div class="slide">
        <div class="slide-txt-box">
            <div class="slide-title">{title}</div>
            <div class="slide-txt">
                {txt}
                <slot/>
            </div>
        </div>
        <div class="slide-img-box">
            <Image src={img} alt={altText}/>
        </div>
    </div>
</div>

