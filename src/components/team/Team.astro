---
import TeamCard from "./TeamCard.astro";
---

<div class="team">
    <div class="team-items">
        <div class="team-item-txt">Meet the<br/>team</div>
        <TeamCard/>
        <TeamCard/>
    </div>
</div>

<style lang="scss" is:global>
    .team {
        height: 80vh;
        min-height: 440px;

        padding-left: 90px;
        padding-right: 90px;

        background-image: url("/img/team-bg.png");
        background-position: center center;
        background-size: cover;

        position: relative;

        .team-items {
            height: 100%;
            display: flex;
            justify-content: space-between;
            align-items: center;

            .team-item-txt {
                padding: 90px 150px 90px 70px;
                background-color: rgba(255, 255, 255, 0.5);
                backdrop-filter: blur(5px);

                font-size: 26px;
                font-weight: bold;
                line-height: 1.4;
            }


        }
    }
</style>
