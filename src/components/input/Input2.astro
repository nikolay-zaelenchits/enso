---
import IconArrowShort from "../icons/IconArrowShort.astro";
interface Props {
    label: string;
    idx: string;
}

const {label, idx} = Astro.props;
---

<div class="input-field">
    <input placeholder={label} name={idx} type="text" required>
    <IconArrowShort/>
    <!--<label for={idx}>{label}</label>-->
</div>

<style lang="scss" is:global>

    .input-field {
        position: relative;

        input {
            background-color: var(--clr-light);
            border: 1px solid;
            border-color: var(--btn-clr-dark);

            font-family: BrandonGrotesque;
            font-size: 16px;
            padding: 10px;
            padding-right: 30px;

            width: 100%;

            &:focus {
                outline: none;
            }
        }

        svg {
            position: absolute;
            width: 16px;
            height: 16px;
            transform: rotate(45deg);
            top: 0;
            bottom: 0;
            margin: auto;
            right: 10px;
        }
    }

</style>